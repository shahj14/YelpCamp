<% include ../partials/header %>
<header class="jumbotron">
  <div class="container">
    <h1>Welcome to YelpCamp</h1>
    <p>Check out some cool grounds!</p>
    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Camp</a>
  </div>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">
  <div class="col-lg-12">
    <h2>Our Most Popular Camps!</h3>
  </div>

  <% campgrounds.forEach(function(site){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%=site.image%>">
        <div class="caption">
          <h4><%= site.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= site._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div>
    </div>
  <% }) %>

</div>


<% include ../partials/footer %>
