<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center;">Create Comment to <%=camp.name%></h1>
  <div style="width: 30%; margin: 20px auto;">
    <form action="/campgrounds/<%=camp._id%>/comments" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Insert Comment">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="comment[author]" placeholder="Author Name">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>



<% include ../partials/footer %>
